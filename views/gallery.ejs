      background: var(--gold);
      color: #000;
    }

    /* Gallery Grid */
    .gallery-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      padding: 0 20px 80px;
    }
    .gallery-item {
      position: relative;
      overflow: hidden;
      border-radius: 15px;
      transition: transform 0.4s ease;
      cursor: pointer;
      animation: fadeIn 0.8s ease;
    }
    .gallery-item:hover {
      transform: scale(1.05);
    }
    .gallery-item img {
      width: 100%;
      border-radius: 15px;
      transition: opacity 0.3s ease;
    }

    /* Overlay - only visible after filter click */
    .gallery-overlay {
      position: absolute;
      inset: 0;
      background: rgba(0, 0, 0, 0.6);
      color: var(--gold);
      display: flex;
      justify-content: center;
      align-items: center;
      font-weight: 600;
      opacity: 0;
      transition: opacity 0.4s ease;
      text-align: center;
      padding: 10px;
      font-size: 1rem;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: scale(0.95); }
      to { opacity: 1; transform: scale(1); }
    }

